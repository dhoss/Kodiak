<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to post.title, post %></h2>
  <p class="blog-post-meta">
    <%= post.created_at %> by <%= link_to post.user.name, user_path(post.user) %>
    <% if post.category%>
      Filed under: <%= post.category.name %>
    <% end %>
  </p>
  <%= post.body %>
  <% if can? :edit, post %>
  <div class="post-edit">
    <%= link_to 'Edit', edit_post_path(post) %>
  <% end %>
  </div>
</div>
<!-- /.blog-post -->
