  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Galleries</h1>
    </div>
    <% @galleries.each do |gallery| %>
      <div class="col-lg-3 col-sm-4 col-xs-6">
        <%= link_to image_tag(gallery.cover_photo, class: "img-responsive"),  gallery, class: "thumbnail"%>
        <p><%= gallery.name %></p>
      </div>
    <% end %>
  </div>
<% if can? :create, Gallery %>
  <%= link_to 'New Gallery', new_gallery_path %>
<% end %>

<%= paginate @galleries %>
